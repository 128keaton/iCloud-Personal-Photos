extends layout

block meta
    meta(name='description' content=album.name)
    meta(property='og:image' content=photos[0].thumbnail)
    meta(name='og:description' content=album.name)
    meta(name='twitter:image' content=photos[0].thumbnail)
    meta(name='twitter:description' content=album.name)

    each photo in photos.slice(0, 50)
        link(rel='preload' as='image' href=`/${album.slug}/${photo.id}/thumb.jpg`)


block content
    div.loading
        h3 Loading
    div.photos
        each photo in photos
            a(href=`/${album.slug}/${photo.id}`, class='photo')
                img(src=`/${album.slug}/${photo.id}/thumb.jpg`, alt='Photo Thumb', srcset=`/${album.slug}/${photo.id}/thumb.jpg 100w`)
    script(src='/assets/js/album.js')
